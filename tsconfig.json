// Copied from: https://github.com/gatsbyjs/gatsby/tree/master/examples/using-typescript
{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    // "allowJs": true,
    // "checkJs": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "__fixtures__/*": ["../__fixtures__/*"],
      "components/*": ["components/*"],
      "pages/*": ["pages/*"],
      "templates/*": ["templates/*"],
      "utils/*": ["utils/*"]
    }
  }
}
